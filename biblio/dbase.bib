@Article{arndt2015relative,
  author    = {Arndt, Channing and Jones, Sam and Salvucci, Vincenzo},
  title     = {When do relative prices matter for measuring income inequality? The case of food prices in {Mozambique}},
  journal   = {The Journal of Economic Inequality},
