@InCollection{Arndt2017pov,
  author    = {Arndt, Channing and Jones, Sam and Mahrt, Kristi and Salvucci, Vincenzo and Tarp, Finn},
  title     = {A review of consumption poverty estimation for {Mozambique}},
  booktitle = {Measuring Poverty and Wellbeing in Developing Countries},
